<mvc:View controllerName="zcashdiscountmodulepool.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}" class="myCustomBackground">
        <content>
            <Panel id="panel1" backgroundDesign="Transparent">
                <form:SimpleForm backgroundDesign="Transparent" id="form1" layout="ResponsiveGridLayout" columnsL="3">
                    <Label id="label1" design="Bold" text="Customer Code"></Label>
                    <Input id="customer" type="Text" placeholder="Select Customer Code" showValueHelp="true" valueHelpOnly="true" valueHelpIconSrc="sap-icon://value-help" valueHelpRequest="handleValueHelp"></Input>
                    <Label id="label2" design="Bold" text="Circular Number"></Label>
                    <ComboBox id="combo" showSecondaryValues="true">
                        <items>
                            <core:ListItem id="circular"></core:ListItem>
                        </items>
                    </ComboBox>
                    <Label id="label3" design="Bold"></Label>
                    <HBox id="hbox">
                        <VBox id="vbox">
                            <Button id="button" text="Execute" press="OnExecute"></Button>
                        </VBox>
                    </HBox>
                    <core:Title id="core1" />
                </form:SimpleForm>
            </Panel>
        </content>
    </Page>

</mvc:View>
