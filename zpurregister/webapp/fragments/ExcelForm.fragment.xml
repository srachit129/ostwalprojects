<core:FragmentDefinition xmlns:form="sap.ui.layout.form" controller="zsubsidireport.controller.First_Screen" xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Export As" id="dia">
        <form:SimpleForm editable="true" id="form">
            <form:content>
                <Label id="FileNameLabel" text="File Name" />
                <Input id="FileName" value="{oExcelFileNameModel>/ExcelFileName}"/>

                <Label id="FormatLabel" text="Format" />
                <Input id="Format" editable="false" value="Microsoft Excel (*.xlsx)" />
            </form:content>
        </form:SimpleForm>
        <beginButton>
            <Button id="button1" text="Export" type="Emphasized" press="ExportButton" />
        </beginButton>
        <endButton>
            <Button id="button2" text="Cancel" type="Emphasized" press="Cancelbutton" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
